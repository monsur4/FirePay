<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.silicon.hub.firepay">
    <!--
    to use on play stoe remember to Disclose to the user how your app accesses, collects, uses, or shares personal and sensitive data.
     https://developer.android.com/training/id-auth/identify.html#InformConsent
    -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:theme="@style/AppThemeWithOutActionBarNative" />
        <activity android:name=".CurrencyBuyActivity"
            android:theme="@style/AppThemeWithOutActionBarNative"/>
        <activity
            android:name=".HomeActivity"
            android:theme="@style/AppThemeWithOutActionBarNative" />
        <activity
            android:name=".OnBoarding"
            android:theme="@style/AppThemeWithOutActionBarOnBoarding">

        </activity>
        <activity android:name=".LoginActivity"
            android:theme="@style/LauncherTheme">

        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>