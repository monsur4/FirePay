<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/nativeColorGreen"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/currency_icon_imageview"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@id/transaction_type_textview"
            android:layout_alignBottom="@id/status_text"
            android:src="@drawable/bitcoin_gold" />

        <TextView
            android:id="@+id/transaction_type_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/currency_icon_imageview"
            android:layout_alignRight="@id/currency_icon_imageview"
            android:gravity="center"
            android:text="Buy"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/transaction_amount_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/status_icon"
            android:layout_toRightOf="@id/currency_icon_imageview"
            android:gravity="center"
            android:text="N500"
            android:textColor="@android:color/white"
            android:textSize="50sp" />

        <ImageView
            android:id="@+id/status_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/toolbar_background"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_check" />

        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/status_icon"
            android:layout_alignLeft="@id/status_icon"
            android:layout_alignRight="@id/status_icon"
            android:gravity="center"
            android:text="Success"
            android:textColor="@android:color/white"
            android:textSize="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/transaction_amount_textview"
            android:layout_alignBottom="@id/status_text"
            android:layout_toLeftOf="@id/status_icon"
            android:layout_toRightOf="@id/currency_icon_imageview"
            android:gravity="center"
            android:text="23|4|2019"
            android:textColor="@android:color/white"
            android:textSize="?android:textAppearanceSmall" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>