<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorTransparentWhite</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <!--<item name="android:textColor">@color/nativeColorGreen</item>-->
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@color/nativeColorGreen</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppThemeWithOutActionBarOnBoarding" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <!--a custom tool bar is set for this activities-->
    <style name="AppThemeWithOutActionBarNative" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/nativeColorGreen</item>
        <item name="colorPrimaryDark">@color/colorTransparentWhite</item>
        <!--
                <item name="android:textColor">@color/nativeColorGreen</item>
        -->
        <!--
                <item name="android:textColorPrimary">@color/nativeColorGreen</item>
        -->
    </style>

    <style name="buySellButtonStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/nativeColorGreen</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="currencyTextStyle" parent="buySellButtonStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableRight">@drawable/ic_right</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="currencyLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">74dp</item>
        <item name="android:layout_marginTop">0.4dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <!-- The launcher theme. It sets the main window background to the launch_screen drawable -->
    <style name="LauncherTheme" parent="AppThemeWithOutActionBarOnBoarding">
    <item name="android:windowBackground">@drawable/launch_screen</item>
    <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
    <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>

</resources>

